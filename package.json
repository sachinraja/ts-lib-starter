{
  "name": "ts-lib-starter",
  "version": "0.0.0",
  "type": "module",
  "description": "boilerplate for your next TypeScript library",
  "main": "dist/index.cjs",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "default": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm clean && tsup",
    "clean": "rimraf dist",
    "format": "prettier -w .",
    "lint": "run-p lint:*",
    "lint:format": "prettier -c .",
    "lint:types": "tsc",
    "lint:xo": "xo",
    "prepare": "husky install",
    "prepublishOnly": "pnpm build",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "devDependencies": {
    "@swc/core": "1.2.111",
    "@swc/jest": "0.2.8",
    "@types/jest": "27.0.3",
    "@types/node": "16.11.9",
    "eslint-config-prettier": "8.3.0",
    "husky": "7.0.4",
    "jest": "27.3.1",
    "lint-staged": "11.2.6",
    "npm-run-all": "4.1.5",
    "prettier": "2.4.1",
    "prettier-plugin-pkg": "0.11.0",
    "regenerator-runtime": "0.13.9",
    "rimraf": "3.0.2",
    "tsup": "5.8.1",
    "typescript": "4.4.4",
    "xo": "0.46.4"
  },
  "sideEffects": false,
  "lint-staged": {
    "*.{js,ts,md,json,yaml}": "prettier -w"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "plugins": [
      "./node_modules/prettier-plugin-pkg"
    ]
  },
  "tsup": {
    "entryPoints": [
      "src/index.ts"
    ],
    "format": [
      "esm",
      "cjs"
    ],
    "dts": {
      "resolve": true
    },
    "splitting": true
  },
  "xo": {
    "extends": [
      "prettier"
    ]
  }
}
