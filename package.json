{
  "name": "ts-lib-starter",
  "version": "0.0.0",
  "description": "boilerplate for your next TypeScript library",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "default": "./dist/index.cjs"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm clean && tsup src/index.ts --format esm,cjs --dts",
    "format": "prettier -w .",
    "lint:format": "prettier -c .",
    "lint:types": "tsc",
    "lint:xo": "xo",
    "lint": "run-p lint:*",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@swc/core": "1.2.95",
    "@swc/jest": "0.2.4",
    "@types/jest": "27.0.2",
    "@types/node": "16.10.3",
    "eslint-config-prettier": "8.3.0",
    "husky": "7.0.2",
    "jest": "27.2.5",
    "lint-staged": "11.2.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.4.1",
    "rimraf": "3.0.2",
    "tsup": "5.4.0",
    "typescript": "4.4.3",
    "xo": "0.45.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "xo": {
    "extends": [
      "prettier"
    ]
  },
  "lint-staged": {
    "*.{js,ts,md,json,yaml}": "prettier -w"
  }
}
